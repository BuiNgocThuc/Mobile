<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/onCreateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="onCreate() calls : 0" />

        <TextView
            android:id="@+id/onRestartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onRestart() calls : 0"
            android:layout_below="@id/onCreateTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/onStartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onStart() calls : 0"
            android:layout_below="@id/onRestartTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/onResumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onResume() calls : 0"
            android:layout_below="@id/onStartTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="Close Activity Two" />
    </LinearLayout>
</RelativeLayout>